{
  "manifest_version": 2,
  "name": "Annotator",
  "description": "Adds a floating box to take notes directly on web pages.",
  "version": "1.1",

  "browser_specific_settings": {
    "gecko": {
      "strict_min_version": "54.0a1"
    }
  },

  "icons": {
    "48": "icons/post.png"
  },

  "permissions": [
    "storage",
    "tabs",
    "activeTab"
  ],

  "browser_action": {
    "default_icon": "icons/post.png",
    "default_title": "Annotator",
    "default_popup": "sidebar/panel.html"
  }, 

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ]
}
